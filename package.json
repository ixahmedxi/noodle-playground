{
  "name": "noodle",
  "version": "0.1.0",
  "description": "Open source student productivity platform.",
  "author": "Ahmed Elsakaan",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@7.29.0",
  "scripts": {
    "clean": "pnpm docker:down && rm -f -r node_modules **/node_modules **/dist **/.next **/.turbo",
    "postinstall": "pnpm db:generate && pnpm build:packages",
    "format": "prettier --write .",
    "lint": "pnpm turbo lint",
    "dev": "pnpm turbo dev",
    "build": "pnpm turbo build",
    "build:packages": "pnpm turbo build --filter=!@noodle/web",
    "start": "pnpm turbo start",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "db:generate": "pnpm turbo db:generate",
    "db:push": "pnpm turbo db:push",
    "db:studio": "pnpm turbo db:studio"
  },
  "devDependencies": {
    "@noodle/tsconfig": "workspace:^0.1.0",
    "@types/node": "18.14.2",
    "eslint": "^8.35.0",
    "eslint-config-noodle": "workspace:^0.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  }
}
