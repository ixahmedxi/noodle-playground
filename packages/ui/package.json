{
  "name": "@noodle/ui",
  "version": "0.1.0",
  "description": "Noodle's UI component library and design system",
  "author": "Ahmed Elsakaan",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx,.cjs ."
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.10.0"
  },
  "devDependencies": {
    "@noodle/tailwind": "workspace:*",
    "@noodle/tsconfig": "workspace:*",
    "@storybook/addon-a11y": "7.0.0-beta.54",
    "@storybook/addon-essentials": "^7.0.0-beta.54",
    "@storybook/addon-interactions": "^7.0.0-beta.54",
    "@storybook/addon-links": "^7.0.0-beta.54",
    "@storybook/addon-postcss": "3.0.0-alpha.1",
    "@storybook/blocks": "7.0.0-beta.54",
    "@storybook/react": "^7.0.0-beta.54",
    "@storybook/react-vite": "7.0.0-beta.54",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@vitest/coverage-c8": "^0.29.1",
    "autoprefixer": "^10.4.13",
    "eslint-config-noodle": "workspace:*",
    "jsdom": "^21.1.0",
    "postcss": "^8.4.21",
    "prop-types": "^15.8.1",
    "storybook": "^7.0.0-beta.54",
    "storybook-tailwind-dark-mode": "^1.0.15",
    "tailwindcss": "^3.2.7",
    "tsup": "^6.6.3",
    "vitest": "^0.29.1"
  }
}
